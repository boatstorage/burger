


<h4>Burgers!</h4>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4>Burgers to be eaten!</h4>
        {{#each burgers}}
          {{#unless this.devoured}}
          
            <li style="list-style:none;">
              <h5>{{this.id}}. {{this.burger_name}}
                <form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
            
                  <button type='submit' class="btn btn-default">Devour it!</button>
                </form>
              </h5>
            </li>
          {{/unless}}
        {{/each}}
    </div>

    <div class="col-md-6">
    <h4>Burgers that are devoured!</h4>


      {{#each burgers}}
        {{#if this.devoured}}
           <li style="list-style:none;">
              <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
            </li>
        
        {{/if}}
      {{/each}}
    </div>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-6">
  <h2>Add a Burger</h2>
  <form action="/burgers/insertOne" method="POST">

    <input type="text" id="name" name="burgerName" placeholder="burgers go here">
    <button type="submit" class="addburger"> Submit</button>
 </form>
 </div>
</div>